{
  "private": true,
  "scripts": {
    "dev": "gulp --dev && fractal start",
    "build": "fractal build && gulp --build",
    "minification": "gulp minification",
    "check": "remark source/docs/**/*.md --quiet && yaspeller source/docs/**/*.md",
    "fix": "remark source/docs/**/*.md --output && eyo source/docs/**/*.md --in-place"
  },
  "browserslist": [
    "last 2 version",
    "not dead",
    "not ie <= 11"
  ],
  "dependencies": {
    "@frctl/fractal": "^1.4.1",
    "@frctl/mandelbrot": "^1.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@mavrin/remark-typograf": "^2.1.6",
    "autoprefixer": "^10.0.1",
    "cssnano": "^4.1.10",
    "del": "^6.0.0",
    "eyo": "^5.0.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^3.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-terser": "^1.4.1",
    "postcss": "^8.1.4",
    "postcss-import": "^13.0.0",
    "remark": "^13.0.0",
    "remark-cli": "^9.0.0",
    "remark-lint": "^8.0.0",
    "remark-lint-heading-increment": "^2.0.1",
    "remark-lint-list-item-content-indent": "^2.0.1",
    "remark-lint-no-empty-url": "^2.0.1",
    "remark-lint-no-heading-punctuation": "^2.0.1",
    "remark-lint-no-inline-padding": "^3.0.0",
    "remark-lint-ordered-list-marker-style": "^2.0.1",
    "rollup-stream": "^1.24.1",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "yargs": "^16.1.0",
    "yaspeller": "^7.0.0"
  },
  "remarkConfig": {
    "settings": {
      "fences": true,
      "listItemIndent": "1"
    },
    "plugins": [
      [
        "@mavrin/remark-typograf",
        {
          "locale": [
            "ru",
            "en-US"
          ],
          "enableRule": [
            "ru/money/ruble",
            "common/nbsp/replaceNbsp"
          ]
        }
      ],
      "lint-heading-increment",
      "lint-list-item-content-indent",
      "lint-no-empty-url",
      "lint-no-heading-punctuation",
      "lint-no-inline-padding",
      [
        "lint-ordered-list-marker-style",
        "."
      ]
    ]
  },
  "yaspeller": {
    "findRepeatWords": true,
    "ignoreDigits": true,
    "ignoreRomanNumerals": true,
    "ignoreUppercase": true,
    "ignoreUrls": true
  }
}
