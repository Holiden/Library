{
  "private": true,
  "scripts": {
    "check": "remark source/docs/**/*.md --quiet && yaspeller source/docs/**/*.md",
    "fix": "remark source/docs/**/*.md --output && eyo source/docs/**/*.md --in-place",
    "dev": "gulp --dev && fractal start",
    "build": "fractal build && gulp --build"
  },
  "dependencies": {
    "@frctl/fractal": "^1.3.0",
    "@frctl/mandelbrot": "^1.4.0"
  },
  "devDependencies": {
    "@mavrin/remark-typograf": "^2.1.6",
    "del": "^5.1.0",
    "eyo": "^5.0.0",
    "gulp": "^4.0.2",
    "gulp-file-include": "^2.2.2",
    "gulp-if": "^3.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.0.0",
    "remark": "^12.0.0",
    "remark-cli": "^8.0.0",
    "remark-lint": "^7.0.0",
    "remark-lint-heading-increment": "^2.0.0",
    "remark-lint-list-item-content-indent": "^2.0.0",
    "remark-lint-no-empty-url": "^2.0.0",
    "remark-lint-no-heading-punctuation": "^2.0.0",
    "remark-lint-no-inline-padding": "^2.0.0",
    "remark-lint-ordered-list-marker-style": "^2.0.0",
    "yargs": "^15.4.1",
    "yaspeller": "^7.0.0"
  },
  "remarkConfig": {
    "settings": {
      "fences": true,
      "listItemIndent": "1"
    },
    "plugins": [
      [
        "@mavrin/remark-typograf",
        {
          "locale": [
            "ru",
            "en-US"
          ],
          "enableRule": [
            "ru/money/ruble",
            "common/nbsp/replaceNbsp"
          ]
        }
      ],
      "lint-heading-increment",
      "lint-list-item-content-indent",
      "lint-no-empty-url",
      "lint-no-heading-punctuation",
      "lint-no-inline-padding",
      [
        "lint-ordered-list-marker-style",
        "."
      ]
    ]
  },
  "yaspeller": {
    "findRepeatWords": true,
    "ignoreDigits": true,
    "ignoreRomanNumerals": true,
    "ignoreUppercase": true,
    "ignoreUrls": true
  }
}
